{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true,
    "esModuleInterop": true,

    "types": ["node"],
    "baseUrl": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
